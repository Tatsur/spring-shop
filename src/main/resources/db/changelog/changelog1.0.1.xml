<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="init-order-product" author="M.T.">
        <createTable tableName="orders">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="cart_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_cart_id" references="cart(id)"/>
            </column>
        </createTable>

        <sql>
            insert into product(id, name, count) values
            (uuid_generate_v4(), 'Shoes', 10),
            (uuid_generate_v4(), 'T-shirt', 100),
            (uuid_generate_v4(), 'Coat', 50),
            (uuid_generate_v4(), 'Skirt', 15),
            (uuid_generate_v4(), 'Jeans', 110)
        </sql>
    </changeSet>

</databaseChangeLog>